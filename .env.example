# KEY=VALUE
#
# Each ENVIRONMENT VARIABLE defined will be available as
# `process.env.KEY` in your API code

# PORT Number for API
PORT=8080

# Secret for signing session cookies
SESSION_SECRET="replace_me_with_super_long_secret"

{
  "name": "backend-api",
  "version": "0.1.0",
  "description": "Backend REST API server built with express.js and sequelize.js",
  "type": "module",
  "scripts": {
    "format": "prettier . --check",
    "lint": "eslint .",
    "start": "node app.js",
    "dev": "node --watch --env-file=.env app.js",
    "build": "cd ../frontend-client && npm install && npm run build"

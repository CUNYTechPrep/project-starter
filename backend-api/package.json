  "license": "MIT",
  "dependencies": {
    "express": "4.21.2",
    "morgan": "^1.10.0",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/express": "4.17.21",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "9.1.0",
    "globals": "^15.9.0",
    "prettier": "3.3.3"
  },
  "engines": {
    "node": ">=20.16.0 <21.0.0"
  }
